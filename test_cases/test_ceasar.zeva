void caesarEncrypt(int32_t plaintext[], int32_t plaintextLength, int32_t key) {
    int i = 0;
    while (i < plaintextLength) {
        plaintext[i] = (plaintext[i] + key) % 26;
        i++;
    }

    return;
}

void caesarDecrypt(int32_t plaintext[], int32_t plaintextLength, int32_t key) {
    int i = 0;
    while (i < plaintextLength) {
        plaintext[i] = (plaintext[i] - key + 26) % 26;
        i++;
    }

    return;
}
